<UIView layout="flex:1,marginTop:30" attr="bgColor:white">


    <FlexTouchView onPress="chooseAction" layout="margin:10,flexDirection:row,justifyContent:space-between" attr="underlayColor:darkGray,bgColor:#f5f5f5,borderRadius:7,
    ">
        <UILabel name="typeLab" layout="margin:15" attr="fontSize:14,color:#333333,linesNum:0,text:BTC"/>
        <UIImageView attr="source:goback" layout="margin:15"/>
    </FlexTouchView>

    <UILabel name="" layout="margin:10" attr="fontSize:14,color:#333333,linesNum:0,text:至"/>

    <UIView layout="flexDirection:row" attr="">

        <UITextField name="addressTxt" layout="height:40,marginLeft:10,flex:1" attr="fontSize:14,color:black,textAlign:left,placeholder:,text:,
        borderColor:#f5f5f5,borderWidth:1,borderRadius:7,placeholder:输入或长按粘贴地址"/>

        <FlexTouchView onPress="saoAction" layout="width:40,height:40,marginLeft:10,marginRight:10,justifyContent:center,alignItems:center" attr="underlayColor:darkGray">
            <UIImageView attr="source:Topromote" layout="width:25,height:20"/>
        </FlexTouchView>   

    </UIView>

    <UIView layout="flexDirection:row,marginTop:10" attr="">

        <UITextField name="numTxt" layout="height:40,marginLeft:10,flex:1" attr="fontSize:14,color:black,textAlign:left,placeholder:,text:,
        borderColor:#f5f5f5,borderWidth:1,borderRadius:10,placeholder:输入数量,keyboardType:numberPad"/>

        <FlexTouchView onPress="allAction" layout="width:40,height:40,marginLeft:10,marginRight:10,justifyContent:
        center,alignItems:center" attr="underlayColor:darkGray">
            <UILabel name="" layout="" attr="fontSize:14,color:#1E73F4,linesNum:0,text:全部"/>
        </FlexTouchView>    
    </UIView>


    <FlexTouchView onPress="sendAction" layout="margin:10,height:40,justifyContent:center,alignItems:center" attr="underlayColor:darkGray,bgColor:#1E73F4,borderRadius:5">
        <UILabel name="" layout="" attr="fontSize:14,color:white,linesNum:0,text:发送"/>
    </FlexTouchView>

    <UILabel name="bottomLab" layout="margin:10" attr="fontSize:10,color:gray,linesNum:0,text:1.请确保正在发送的是一个比特币地址 否则字长丢失且无法找回"/>



</UIView>
