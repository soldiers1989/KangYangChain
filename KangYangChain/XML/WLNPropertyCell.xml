<?xml version="1.0" encoding="UTF-8"?>

<UIView layout="" attr="bgColor:#F5F5F5">

    <UIView layout="margin:10,marginBottom:0" attr="bgColor:white,borderRadius:10,clipsToBounds:true">

        <UIView layout="alignItems:center" attr="">
